<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/fen</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ToolbarTitleStyle" parent="android:Widget.TextView">

        <!-- The action bar title font -->
        <item name="android:fontFamily">sans-serif-light</item>
        <!-- Customizes the color of the action bar title-->
        <item name="android:textColor">@color/white</item>
        <!-- Customizes the size of the action bar title-->
        <item name="android:textSize">17dp</item>
    </style>
</resources>
